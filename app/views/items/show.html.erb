<div class="box col-xs-8 col-xs-offset-2">
  <h1 class="centered"><%= @item.name %></h1>
  <p class="centered"><%= @item.description %></p>
</div>
<div class="pull-right">
  <% if current_user && current_user == @item.user %>
    <%= link_to 'Delete', item_path(@item), method: :delete, data: {confirm: 'Are you sure you want to delete this item?'}, class: 'btn btn-primary' %>
  <% end %>
</div>